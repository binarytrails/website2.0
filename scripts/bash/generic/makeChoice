: "
    function : makeChoice

        source path/to/script
        makeChoice 'Do you accept the database and the migrations removal?'

        if [ $keepRunning == false ]; then
            exit 0
        fi
        # your code here
"

keepRunning=false

function makeChoice
{
    local choiceMade=false

    while [ $choiceMade == false ]
    do
        echo $1; echo -n "(yes, no): "; read answer
     
        if [ "$answer" == "yes" ]; then
            choiceMade=true
            keepRunning=true

        elif [ "$answer" == "no" ]; then
            choiceMade=true 
            keepRunning=false

        else
            echo "Take your time..."
        fi
    done
}
